<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/row_instagram_post_1_txtMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Lorem Ipsum Dolor sit amet"
        android:textStyle="bold"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/row_instagram_post_1_image1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/shape_round_view"
        android:backgroundTint="#457"
        app:layout_constraintEnd_toStartOf="@+id/row_instagram_post_1_image2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/row_instagram_post_1_txtMain"
        app:layout_constraintTop_toBottomOf="@+id/row_instagram_post_1_image2" />

    <View
        android:id="@+id/row_instagram_post_1_image2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_round_view"
        android:backgroundTint="#457"
        app:layout_constraintEnd_toEndOf="@+id/row_instagram_post_1_txtMain"
        app:layout_constraintTop_toBottomOf="@+id/row_instagram_post_1_txtMain" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <TextView
        android:id="@+id/row_instagram_post_1_txtMock1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Lorem Ipsum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/row_instagram_post_1_image1"
        app:layout_constraintTop_toBottomOf="@+id/row_instagram_post_1_image1" />

    <TextView
        android:id="@+id/row_instagram_post_1_txtMock2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Lorem ipsum"
        app:layout_constraintBottom_toBottomOf="@+id/row_instagram_post_1_txtMock1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/row_instagram_post_1_txtMock1" />


</androidx.constraintlayout.widget.ConstraintLayout>


