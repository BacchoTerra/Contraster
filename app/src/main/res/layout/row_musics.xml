<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/row_musics_imageMusicNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/cd_image_mock"
        android:background="@drawable/shape_cornered_view"
        tools:backgroundTint="#00BCD4"
        android:paddingVertical="12dp"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_round_music_note_24" />

    <TextView
        android:id="@+id/row_musics_txtMusicName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:singleLine="true"
        tools:text="TextViewasdasdaskjdlkasjdlkasjdlaksjkdljalksdjaslkjd"
        app:layout_constraintEnd_toStartOf="@+id/row_musics_imageMore"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/row_musics_imageMusicNote"
        app:layout_constraintTop_toTopOf="@+id/row_musics_imageMusicNote" />

    <TextView
        android:id="@+id/row_musics_txtMusicArtist"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        tools:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/row_musics_txtMusicName"
        app:layout_constraintTop_toBottomOf="@+id/row_musics_txtMusicName" />

    <ImageView
        android:contentDescription="@string/cd_image_mock"
        android:id="@+id/row_musics_imageMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/row_musics_imageMusicNote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/row_musics_imageMusicNote"
        app:srcCompat="@drawable/ic_baseline_more_vert_24" />

    <View
        android:id="@+id/row_music_viewDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        tools:background="#457"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/row_musics_txtMusicArtist"
        app:layout_constraintTop_toBottomOf="@+id/row_musics_imageMusicNote" />
</androidx.constraintlayout.widget.ConstraintLayout>