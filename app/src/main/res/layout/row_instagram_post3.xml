<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/row_instagram_post_3_txtMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="At vero eos et accusamus et iusto odio dignissimos"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/row_instagram_post_3_txtMock1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Lorem Ipsum"
        app:layout_constraintEnd_toEndOf="@+id/row_instagram_post_3_txtMain"
        app:layout_constraintStart_toStartOf="@+id/row_instagram_post_3_txtMain"
        app:layout_constraintTop_toBottomOf="@+id/row_instagram_post_3_txtMain" />

    <View
        android:id="@+id/row_instagram_post_3_imageBrand"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/row_instagram_post_3_txtMock3"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#457"
        android:background="@drawable/shape_round_view"
        app:layout_constraintTop_toTopOf="@+id/row_instagram_post_3_txtMock2" />

    <TextView
        android:id="@+id/row_instagram_post_3_txtMock2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="24dp"
        android:textSize="12sp"
        android:text="Lorem ipsum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/row_instagram_post_3_imageBrand"
        app:layout_constraintTop_toBottomOf="@+id/row_instagram_post_3_txtMock1"
        app:layout_constraintVertical_bias="0.005" />

    <TextView
        android:id="@+id/row_instagram_post_3_txtMock3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="24dp"
        android:text="Lorem ipsum"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/row_instagram_post_3_txtMock2"
        app:layout_constraintTop_toBottomOf="@+id/row_instagram_post_3_txtMock2"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>